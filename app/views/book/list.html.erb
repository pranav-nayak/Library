<% if @books.blank? %>
<h1>There are no books currently in the system!!</h1>
<% else %>
<h2>These are the current books in our system--</h2>

<ul id = "books">
   <% @books.each do |book| %>
   <li>
        <%= link_to book.title, {:action => 'show', :id => book.id} -%> |
        <b><%= link_to 'Edit', {:action => "edit", :id => book.id} %></b> |
        <b><%= link_to "Delete", {:action => 'delete', :id => book.id}, :confirm => "Are you sure you want to delete this item?" %></b>
   </li>
   <% end %>
</ul>

<% end %>
<p><%= link_to "Add New Book", {:action => 'new' }%></p>
